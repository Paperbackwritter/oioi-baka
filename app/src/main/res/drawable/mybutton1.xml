<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Faded Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000"/> <!-- Faded background color with 9% opacity -->
            <corners android:radius="7dp"/> <!-- Rounded corners of 7dp -->
        </shape>
    </item>
    <!-- White Button -->
    <item android:top="0.3dp" android:left="0.3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#ff0000"/> <!-- Fully opaque white background -->
            <corners android:radius="7dp"/> <!-- Rounded corners of 7dp -->
        </shape>
    </item>
</layer-list>